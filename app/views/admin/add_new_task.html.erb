<div class="change-padding" style="margin-top:30px">
    <div class="row">
        <%# <%= render "links/admin_link"%>
        <div class="col-md-9 bg-white right-part">
            <h3 class="text-center">Create A Task</h3><br>
            <%= form_for :task, url: admin_add_create_task_path(projectid: @project.projectid) , html: {class: 'login-form'} do |f| %>
            <div class="row">
                <div class="col-md-12">
                  <b><%= f.label :title, "Title of Task" %></b><br>
                  <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Task Title',required: "required"%>
                </div>
                <div class="col-md-12">
                  <b><%= f.label :description, "Task Description" %></b><br>
                  <%= f.text_area :description, class: 'form-control', placeholder: 'Enter Task Description',required: "required" %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                  <b><%= f.label :user_id, "Select User" %></b><br>
                  <%= f.select :user_id, options_for_select(User.where(id: @user_ids).map { |user| [user.fullname, user.id] }),  {prompt: "Select User"}, {class: 'form-control', :style => "width: 300px;margin-bottom: 30px", required: "required"}%>
                </div>
                <div class="col-md-3">  
                  <b><%= f.label :important_file, "Select file(if you want to upload)" %></b><br>
                  <%= f.file_field :important_file, class: 'form-control', accept:"image/jpeg, image/jpg" ,onchange: "sizeValidation(this, 200)",required: "required"  %>
               </div>
                <div class="col-md-3">
                  <b><%= f.label :task_status, "Task Status" %></b><br>
                  <%= f.select :task_status, ['Initial','Others'], {prompt:"Select"}, {class: "form-control", :style => "width: 300px;margin-bottom: 30px", required: "required"}%>
                </div>
            </div>
            <%= f.submit "Create Task", class: 'form-submit'%>
            <% end %>
        </div>
    </div>
</div>

