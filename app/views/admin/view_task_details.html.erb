<div class="change-padding" style="margin-top:30px">
    <div class="row">
        <%# <%= render "links/admin_link" %>
        <div class="col-md-9 bg-white right-part">
            <h3>Task Details</h3>
            <% flash.each do |type, msg| %>
                <% if type == 'success' %>
                    <div class="alert alert-success"><%= msg %></div>
                <% elsif type == 'error' %>
                    <div class="alert alert-danger"><%= msg %></div>
                <% else %>
                    <div class="alert alert-info"><%= msg %></div>
                <% end %>
            <% end %>
            <%= form_for :task,  html: { class: 'login-form', id: 'project-form' } do |f| %>
                <%= f.text_field :title, class: 'form-control', placeholder: 'Enter Project Title' %>
                    <% if @task != nil and @task.errors.any? and @task.errors.to_h[:title].to_s != "" %>
                        <div class="alert alert-danger"><%= "Title " + @project.errors.to_h[:title].to_s %></div>
                    <% end %>
                <%= f.text_area :description, class: 'form-control', placeholder: 'Enter Project Description' %>
                    <% if @task != nil and @task.errors.any? and @task.errors.to_h[:description].to_s != "" %>
                        <div class="alert alert-danger"><%= "Description " + @project.errors.to_h[:description].to_s %></div>
                    <% end %>
                <div class="row">
                    <div class="col-md-3">
                      <b><%= f.label "Task Status" %></b><br>
                        <%= f.text_field :task_status, class: 'form-control' %>
                    </div>
                </div>
            <% end %>

        </div>
    </div>
</div>
