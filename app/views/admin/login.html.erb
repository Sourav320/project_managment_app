<section class="login">
    <div class="user-pic"></div>
    <div class="form-header">Admin Login</div>
    <% flash.each do |type, msg| %>
        <% if type == 'success' %>
            <div class="alert alert-success"><%= msg %></div>
        <% elsif type == 'error' %>
            <div class="alert alert-danger"><%= msg %></div>
        <% else %>
            <div class="alert alert-info"><%= msg %></div>
        <% end %>
    <% end %>
    <%= form_for :admin, url: login_admin_index_path, html: {class: 'login-form'} do |f| %>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Enter Your Email Address' %>
        <% if @admin != nil and @admin.errors.any? and @admin.errors.to_h[:email].to_s != "" %>
            <div class="alert alert-danger"><%= "Email " + @admin.errors.to_h[:email].to_s %></div>
        <% end %>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Enter Your Password' %>
        <% if @admin != nil and @admin.errors.any? and @admin.errors.to_h[:password].to_s != "" %>
            <div class="alert alert-danger"><%= "Password " + @admin.errors.to_h[:password].to_s %></div>
        <% end %>
        <%= f.submit "Sign In", class: 'form-submit' %>
    <% end %>
</section>