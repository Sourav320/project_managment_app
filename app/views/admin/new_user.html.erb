
<div class="change-padding" style="margin-top:30px">
    <div class="row">
        <%# <%= render "links/admin_link"%>
        <div class="col-md-9 bg-white right-part">
            <h3 style="margin-top: 30px;">Create User</h3>
            <% flash.each do |type, msg| %>
                <% if type == 'success' %>
                    <div class="alert alert-success"><%= msg %></div>
                <% elsif type == 'error' %>
                    <div class="alert alert-danger"><%= msg %></div>
                <% else %>
                    <div class="alert alert-info"><%= msg %></div>
                <% end %>
            <% end %>
            <%= form_for :project, url: create_user_admin_index_path, html: { class: 'login-form', id: 'project-form' } do |f| %>
               <div class="row">
                  <div class="col-md-4">
                      <b><%= f.label :fullname, "Full Name<small>*</small>".html_safe %></b><br>
                     <%= f.text_field :fullname, id: 'project_fullname', class: 'form-control', placeholder: 'Enter Full Name' %>
                     
                    </div>
                    <div class="col-md-4">
                      <b><%= f.label :email, "Email<small>*</small>".html_safe %></b><br>
                      <%= f.text_field :email, id: 'project_email', class: 'form-control', placeholder: 'Enter Email' %>
                      
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <b><%= f.label :password, "Password<small>*</small>".html_safe %></b><br>
                        <%= f.text_field :password, id: 'project_password', class: 'form-control',placeholder: 'Enter Password' %>
                    </div>
                    <%# <div class="col-md-3">
                        <b><%= f.label "Select Role To Add" </b><br>%> 
                        <%# <%= f.select :role_id,["Select"]+Role.where.not(name: "Super Admin").map { |user| [user.name, user.id] },  {}, {class: 'form-control', :style => "width: 300px;margin-bottom: 30px"} %>
                    <%# </div> %> 
                </div>
                <%= f.submit "Create",  class: 'form-submit', id: 'submit-btn'%>
            <% end %>
             </div>

        </div>
    </div>
</div>




